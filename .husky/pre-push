#!/usr/bin/env bash
# lineup-agent pre-push hook
# Runs Linux E2E tests in Docker before allowing push

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}========================================${NC}"
echo -e "${YELLOW}  Pre-push: Running E2E tests (Linux)${NC}"
echo -e "${YELLOW}========================================${NC}"

# Check if Docker is available
if ! command -v docker &> /dev/null; then
    echo -e "${YELLOW}Warning: Docker is not installed or not in PATH${NC}"
    echo -e "${YELLOW}Skipping E2E tests. Install Docker to enable pre-push checks.${NC}"
    exit 0
fi

# Check if Docker daemon is running
if ! docker info &> /dev/null; then
    echo -e "${YELLOW}Warning: Docker daemon is not running${NC}"
    echo -e "${YELLOW}Skipping E2E tests. Start Docker to enable pre-push checks.${NC}"
    exit 0
fi

# Run E2E tests in Docker
cd "$PROJECT_ROOT"

if ./scripts/e2e-docker.sh; then
    echo -e "${GREEN}Pre-push check passed!${NC}"
    exit 0
else
    echo -e "${RED}Pre-push check failed!${NC}"
    echo -e "${RED}Fix the failing tests before pushing.${NC}"
    exit 1
fi
