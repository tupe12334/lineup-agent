{
  "name": "lineup-agent",
  "version": "0.1.0",
  "description": "Rule-based linting and enforcement CLI tool",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "lineup-agent": "./dist/cli.js"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "pnpm build:native && pnpm build:ts",
    "build:native": "napi build --platform --release --cargo-cwd native",
    "build:debug": "napi build --platform --cargo-cwd native",
    "build:ts": "tsup",
    "dev": "pnpm build:debug && pnpm build:ts",
    "prepublishOnly": "pnpm build",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "artifacts": "napi artifacts",
    "version": "napi version",
    "prepare": "husky"
  },
  "napi": {
    "name": "lineup-agent",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl"
      ]
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "optionalDependencies": {
    "@lineup-agent/darwin-arm64": "0.1.0",
    "@lineup-agent/darwin-x64": "0.1.0",
    "@lineup-agent/linux-x64-gnu": "0.1.0",
    "@lineup-agent/linux-arm64-gnu": "0.1.0",
    "@lineup-agent/win32-x64-msvc": "0.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tupe12334/lineup-agent"
  }
}
